import matplotlib.pyplot as plt

# 1. Resample the data into different averages
daily_avg = df['electricity_demand'].resample('D').mean()
weekly_avg = df['electricity_demand'].resample('W').mean()
monthly_avg = df['electricity_demand'].resample('M').mean()
yearly_avg = df['electricity_demand'].resample('Y').mean()

# 2. Create the plot
plt.figure(figsize=(14, 10))

# Daily
plt.subplot(4, 1, 1)
plt.plot(daily_avg, color='skyblue', label='Daily Avg')
plt.legend()
plt.title('Electricity Demand Averages (2019-2023)')

# Weekly
plt.subplot(4, 1, 2)
plt.plot(weekly_avg, color='orange', label='Weekly Avg')
plt.legend()

# Monthly
plt.subplot(4, 1, 3)
plt.plot(monthly_avg, color='green', label='Monthly Avg')
plt.legend()

# Yearly
plt.subplot(4, 1, 4)
plt.plot(yearly_avg, color='red', marker='o', label='Yearly Avg')
plt.legend()

plt.tight_layout()

# 3. Save the image to upload to GitHub
plt.savefig('demand_averages.png')
plt.show()
